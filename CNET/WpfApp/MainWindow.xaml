<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Background="Beige"
        Title="Moje aplikace" Height="300" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" >
            <Button x:Name="btnTest" Content="Top20" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="105" FontSize="18" Background="#FFAFF0F0" Click="btnTest_Click"/>
            <Button x:Name="btnPersonDetail" Margin="5" Click="btnPersonDetail_Click" Content="Person by ID" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="111" FontSize="16" Background="#FFF7F09A"/>
            <TextBox x:Name="txtPersonID" Margin="5" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29" Height="39" FontSize="16"/>
            <Button x:Name="btnFiles" Margin="5" Content="Load Files...&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="105" FontSize="18" Background="#FFAFF0F0" Click="btnFiles_Click"/>
            <Button x:Name="btnProcessFilesAll" Margin="5" Content="Global stats" Click="btnProcessFilesAll_Click"/>
            <Button x:Name="btnFile" Margin="5" Content="Process File" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="105" FontSize="18" Background="Red" Click="btnFile_Click" Padding="5"/>
        </StackPanel>
        <ScrollViewer Margin="0,100,0,0">
            <TextBlock x:Name="txbInfo" TextWrapping="Wrap" Text="...." FontSize="20" />
        </ScrollViewer>

    </Grid>
</Window>
